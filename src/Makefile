MODULE := github.com/crissyro/go-data-structures
COVERAGE_FILE := coverage.out
BIN_DIR := bin
GOTESTSUM := gotest.tools/gotestsum

.PHONY: all setup test coverage report lint build clean

all: test build

setup:
	@echo "âš™ï¸  Installing tools..."
	go install $(GOTESTSUM)@latest
	go install golang.org/x/tools/cmd/goimports@latest
	go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest

test:
	@echo "ğŸ§ª Running tests..."
	$(GOPATH)/bin/gotestsum --format dots -- -cover -v ./...

coverage:
	@echo "ğŸ“Š Generating coverage..."
	go test -coverprofile=$(COVERAGE_FILE) -covermode=atomic ./...

report: coverage
	@echo "ğŸ“ˆ Opening coverage report..."
	go tool cover -html=$(COVERAGE_FILE)

lint:
	@echo "ğŸ” Linting code..."
	$(GOPATH)/bin/golangci-lint run ./... --timeout 5m

build:
	@echo "ğŸ”¨ Building binaries..."
	@mkdir -p $(BIN_DIR)
	go build -o $(BIN_DIR)/ ./...

clean:
	@echo "ğŸ§¹ Cleaning up..."
	@rm -rf $(COVERAGE_FILE) coverage.html $(BIN_DIR)